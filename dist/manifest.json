{
    "manifest_version": 3,
    "name": "My Vite Chrome Extension",
    "version": "1.0",
    "description": "Opens a page on icon click",
    "action": {
        "default_title": "Click to open page"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["tabs", "bookmarks", "favicon"],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+B",
                "mac": "Command+B"
            }
        }
    }
}
